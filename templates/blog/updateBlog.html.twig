
{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update User</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.titre,{'attr':{'class':'form-control'}}) }}
                    </div>


                    <label for="inputText" class="col-sm-4 col-form-label">address</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.contenu,{'attr':{'class':'form-control'}}) }}

                    </div>
                    <label for="inputText" class="col-sm-4 col-form-label">email</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.auteur,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}